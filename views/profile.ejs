<html ng-app='app'>
    <head>
        <title>Collage Info</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"> <!-- load bootstrap css -->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> <!-- load fontawesome -->
        <link rel="stylesheet" href="/style.css" />
        <script src='https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.2/angular.min.js'></script>
        <script src='/angular.js'></script>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        
    </head>
    <body>
        <div class="topnav">
            <a id="clg" href="www.collageinfo.com" >Collage Info</a>
            <a class="active" href="#home">Home</a>
            <a href="#Answer">Answer</a>
            <a href="#notification">Notification</a>
            <form class="form">
                <input type="text" placeholder="Search.." id="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
          
          <div ng-controller='QuesSubmit' style="padding-left:16px">
            <h1>Welcome <%=user%></h1>
            <h2>Ask Question</h2>
            <textarea ng-model='question' name='Question'></textarea>
            <button ng-click='submit(question)' class="btn btn-primary btn-md">Submit</button>
            <b>Answer:</b><div class="Q"> {{qvisible}}</div>
          </div>
    </body>
    
</html>